{
  "name": "fhl",
  "version": "1.0.0",
  "description": "The full stack repo for all FHL related applications",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "pnpm": "8"
  },
  "scripts": {
    "web-local": "pnpm --filter packages dev",
    "api-local": "pnpm --filter fhl-api dev",
    "dev": "sst dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit && tsc-alias -p tsconfig.json",
    "gen": "hygen"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@tsconfig/node18": "^18.2.1",
    "aws-cdk-lib": "2.91.0",
    "constructs": "10.2.69",
    "dotenv": "^16.3.1",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "prettier": "^2.8.8",
    "sst": "2.24.26",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.2.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "_moduleAliases": {
    "$": "dist"
  },
  "dependencies": {
    "dataloader": "^2.2.2"
  }
}